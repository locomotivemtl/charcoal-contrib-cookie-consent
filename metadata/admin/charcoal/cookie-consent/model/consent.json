{
    "labels": {
        "name": {
            "en": "Consents",
            "fr": "Consentements"
        },
        "singular_name": {
            "en": "Consent",
            "fr": "Consentement"
        },
        "create_item": {
            "en": "Create Consent Content",
            "fr": "Créer le contenu de consentement"
        },
        "new_item": {
            "en": "New Consent Content",
            "fr": "Nouveau contenu de consentement"
        },
        "view_item": {
            "en": "View Consent Content",
            "fr": "Voir le contenu de consentement"
        },
        "edit_item": {
            "en": "Edit Consent Content",
            "fr": "Modifier le contenu de consentement"
        },
        "all_items": {
            "en": "All Consent Content",
            "fr": "Tous les contenus de consentement"
        }
    },

    "properties": {
        "policyPageId": {
            "orders": [
                {
                    "property": "position",
                    "mode": "asc"
                }
            ],
            "label": {
                "en": "Policy Page",
                "fr": "Page de politique"
            },
            "show_notes": "above",
            "notes": {
                "en": "This page’s revision count and modification date/time will be used to manage consent against the latest policy.",
                "fr": "Le nombre de révisions et la date/heure de modification de cette page seront utilisés pour gérer le consentement par rapport à la dernière politique."
            }
        },
        "consentModal": {
            "input_type": "charcoal/admin/property/input/structure-widget",
            "widget_data": {
                "display": "card"
            },
            "label": {
                "en": "Consent Modal",
                "fr": "Modale de consentement"
            },
            "show_notes": "above",
            "notes": {
                "en": "The panel show to visitors who have not consented.",
                "fr": "Le panneau s'affiche aux visiteurs qui n'ont pas consenti."
            }
        },
        "preferencesModal": {
            "input_type": "charcoal/admin/property/input/structure-widget",
            "widget_data": {
                "display": "card"
            },
            "label": {
                "en": "Preferences Modal",
                "fr": "Modal de préférences"
            },
            "show_notes": "above",
            "notes": {
                "en": "The panel to learn more and customize consent.",
                "fr": "Le panneau pour en savoir plus et personnaliser le consentement."
            }
        }
    },

    "admin": {
        "forms": {
            "default": {
                "groups": {
                    "default": {
                        "title": {
                            "en": "Consent Settings",
                            "fr": "Préférences de Consentement"
                        },
                        "l10n_mode": "loop_inputs",
                        "show_icon": true,
                        "icon": "cog",
                        "properties": [
                            "policyPageId",
                            "consentModal",
                            "preferencesModal"
                        ],
                        "layout": {
                            "structure": [
                                { "columns": [ 1 ] },
                                { "columns": [ 1 ] },
                                { "columns": [ 1 ] }
                            ]
                        }
                    },
                    "categories": {
                        "title": {
                            "en": "Cookie Categories",
                            "fr": "Catégories de Témoin"
                        },
                        "type": "charcoal/admin/widget/form-group/nested-widget",
                        "show_header": false,
                        "show_title": true,
                        "show_tab_title": true,
                        "show_icon": true,
                        "icon": "list",
                        "widget_data": {
                            "type": "charcoal/admin/widget/table",
                            "obj_type": "charcoal/cookie-consent/model/cookie-category"
                        }
                    }
                },
                "sidebars": {
                    "default": {}
                }
            }
        },

        "form_sidebars": {
            "default": {
                "properties": [
                    "created",
                    "last_modified",
                    "active"
                ],
                "properties_options": {
                    "active": {
                        "output_type": "input"
                    },
                    "forceConsent": {
                        "output_type": "input",
                        "required_acl_permissions": [ "section_dev" ]
                    }
                }
            }
        },

        "dashboards": {
            "admin.create": {
                "widgets": {
                    "form": {
                        "priority": 50,
                        "type": "charcoal/admin/widget/object-form",
                        "group_display_mode": "tab",
                        "form_ident": "default",
                        "novalidate": true
                    }
                },
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] }
                    ]
                }
            },
            "admin.edit": {
                "widgets": {
                    "form": {
                        "priority": 50,
                        "type": "charcoal/admin/widget/object-form",
                        "group_display_mode": "tab",
                        "form_ident": "default",
                        "novalidate": true
                    }
                },
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] }
                    ]
                }
            }
        },
        "default_create_dashboard": "admin.create",
        "default_edit_dashboard": "admin.edit"
    }
}
